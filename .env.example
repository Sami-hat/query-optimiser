# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=pg_analyser
DB_USER=postgres
DB_PASSWORD=password_here

# Connection Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# Query Execution
STATEMENT_TIMEOUT_MS=30000

# API Configuration
API_KEYS=
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO

# AWS Configuration (optional - for CloudWatch metrics)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CLOUDWATCH_NAMESPACE=PostgreSQLOptimizer
CLOUDWATCH_ENABLED=false

# Docker-specific (used by docker-compose.yml)
# Set these when running with Docker
# Example: docker-compose --env-file .env up
